# Prompt Refiner Configuration
# Copy this file to .env and fill in your values

# Required: Your n8n webhook URL
REFINER_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-endpoint

# HTTP client settings (timeout in ms, default 5 min for long n8n workflows)
REFINER_TIMEOUT_MS=300000
REFINER_MAX_RETRIES=3

# Daemon settings
REFINER_DAEMON_SOCKET=/tmp/prompt-refiner.sock
REFINER_CACHE_MAX=200
REFINER_CACHE_TTL_MS=60000

# Set to 1 to prefer daemon over direct HTTP calls
REFINER_DAEMON=0

# Logging level: debug, info, warn, error
LOG_LEVEL=info
